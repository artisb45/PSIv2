
@{
    ViewBag.Title = "SignUp";
}

<h2>Registration</h2>

<div class="form-horizontal">
    <div class="form-group">
        <label class="control-label col-md-1">Username</label>
        <input type="text" class="form-control" />
    </div>
    <div class="form-group">
        <label class="control-label col-md-1">E-Mail</label>
        <input type="text" class="form-control" />
    </div>
    <div class="form-group">
        <label class="control-label col-md-1">Password</label>
        <input type="text" class="form-control" />
    </div>
    <div class="form-group">
        <label class="control-label col-md-1">Confirm Password</label>
        <input type="text" class="form-control" />
    </div>
    <div class="form-group">
        <button class="btn btn-default col-lg-offset-1" title="Register">Register</button>
    </div>
</div>

